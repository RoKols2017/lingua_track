# =============================================================================
# LinguaTrack - Переменные окружения
# =============================================================================

# Yandex SpeechKit (TTS)
# Получите API ключ и Folder ID в Yandex Cloud Console
YANDEX_SPEECHKIT_API_KEY=your_yandex_api_key_here
YANDEX_SPEECHKIT_FOLDER_ID=your_folder_id_here

# TTL для аудиокеша в секундах (604800 = 7 дней)
AUDIO_CACHE_TTL=604800

# Telegram Bot
# Получите токен у @BotFather в Telegram
TELEGRAM_BOT_TOKEN=your_telegram_bot_token_here

# =============================================================================
# Django Settings (опционально)
# =============================================================================

# Секретный ключ Django (генерируется автоматически)
# SECRET_KEY=your_django_secret_key_here

# Режим отладки (True для разработки, False для продакшена)
# DEBUG=True

# Разрешенные хосты (для продакшена)
# ALLOWED_HOSTS=localhost,127.0.0.1

# =============================================================================
# База данных (опционально)
# =============================================================================

# SQLite используется по умолчанию
# Для PostgreSQL:
# DATABASE_URL=postgresql://user:password@localhost:5432/linguatrack

# =============================================================================
# Celery + Redis (для напоминаний)
# =============================================================================

# URL Redis сервера (для Celery)
# REDIS_URL=redis://localhost:6379/0

# =============================================================================
# Логирование (опционально)
# =============================================================================

# Уровень логирования (DEBUG, INFO, WARNING, ERROR)
# LOG_LEVEL=INFO

# =============================================================================
# Безопасность (опционально)
# =============================================================================

# CSRF токен (генерируется автоматически)
# CSRF_TRUSTED_ORIGINS=https://yourdomain.com

# =============================================================================
# Инструкции по настройке:
# =============================================================================
# 1. Скопируйте этот файл в .env
# 2. Замените заглушки на реальные значения
# 3. Yandex SpeechKit: https://console.cloud.yandex.ru/
# 4. Telegram Bot: @BotFather в Telegram
# 5. Redis: установите Redis для Celery напоминаний 